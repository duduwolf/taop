<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.5"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<display-name>taop-example</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<login-config>
		<auth-method>BASIC</auth-method>
	</login-config>
	
	<servlet>
		<display-name>simpleweb</display-name>
		<servlet-name>simpleweb</servlet-name>
		<servlet-class>cn.taop.simpleweb.SimpleWebServlet</servlet-class>
	</servlet>
	<servlet-mapping>
        <servlet-name>simpleweb</servlet-name>
        <url-pattern>/simpleweb/*</url-pattern>
    </servlet-mapping>
	
</web-app>
